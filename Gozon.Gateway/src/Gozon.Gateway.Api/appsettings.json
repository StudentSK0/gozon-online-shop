{
  "Urls": "http://0.0.0.0:8080",
  "ReverseProxy": {
    "Routes": {
      "payments-route": {
        "ClusterId": "payments-cluster",
        "Match": {
          "Path": "/payments/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/payments" }
        ]
      },
      "orders-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "/orders/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/orders" }
        ]
      }
    },
    "Clusters": {
      "payments-cluster": {
        "Destinations": {
          "payments": {
            "Address": "http://payments-api:8081/"
          }
        }
      },
      "orders-cluster": {
        "Destinations": {
          "orders": {
            "Address": "http://orders-api:8082/"
          }
        }
      }
    }
  }
}
